            "outputs": [],
            "source": [
                "# collapse-show\n",
                "for book in tqdm(ncert_history_books):\n",
                '    book.download("../data/raw")\n',
                '    book.unzip("../data/extract")',
            ],
        },
        {
            "cell_type": "markdown",
            "metadata": {},
            "source": ["## Extract plaintext from pdf"],
        },
        {
            "cell_type": "code",
            "execution_count": null,
            "metadata": {},
            "outputs": [],
            "source": ["single_book = ncert_history_books[0]"],
        },
        {
            "cell_type": "code",
            "execution_count": null,
            "metadata": {},
            "outputs": [],
            "source": [
                "pdf_files = []\n",
                "for folder in single_book.extract_to_path.ls():\n",
                "    pdf_files.extend(folder.pdfls())\n",
                "pdf_files.sort()\n",
                "pdf_files = [\n",
                "    file for file in pdf_files if file.stem[-2:].isdigit()\n",
                "]  # keep the chapter files, nothing else\n",
                "pdf_files",
            ],
        },
        {
            "cell_type": "code",
            "execution_count": null,
            "metadata": {},
            "outputs": [],
            "source": [
                "# map chapter numbers\n",
                "from typing import List\n",
                "def pdf_to_text(file: Path)->List[str]:\n",
                "    page_texts = []\n",
                "    with pdfplumber.open(file) as pdf:\n",
                "        for page in pdf.pages[3:5]:\n",
                "            txt = page.extract_text()\n",
                '            txt = " ".join(txt.split("\\n"))\n',
                "            page_texts.append(txt)\n",
                "    return page_texts\n",
                "\n",
                "\n",
                "for file in pdf_files:\n",
                "    plain_text = pdf_to_text(file)\n",
                "    print(plain_text)",
            ],
        },
