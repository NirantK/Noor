            "outputs": [],
            "source": [
                "%load_ext autoreload\n",
                "%autoreload 2\n",
                "Path.ls = lambda x: list(x.iterdir())\n",
                'Path.pdfls = lambda x: [x for x in list(x.iterdir()) if x.suffix == ".pdf"]\n',
                "from textbook import Book, Chapter",
